<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/successful_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/sportify"
        style="@style/sportify_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/spotify_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/sportify_li"
        android:id="@+id/sportify_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Project"
        app:layout_constraintTop_toBottomOf="@id/sportify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.7"
        app:cardBackgroundColor="#4DFFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/sportify_li"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/goToLoginPageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        >

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:text="19.08 ~ 19.12 Project for comparison of fire damage with the presence of firefighting facilities  "
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingLeft="10dp"
            android:text="22.05 ~ 22.08 Global Challenge: Block Chain"
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:paddingLeft="10dp"
            android:text="22.09 ~ 22.12 IT Investment Analysis of AI Camstudy Service"
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:paddingLeft="10dp"
            android:text="23.01 ~ 23.05 Google Solution Challenge: Sgether"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:paddingLeft="10dp"
            android:text="23.04 ~ 23.06 Project for analysis Youtube Hot 100 and News data"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:paddingLeft="10dp"
            android:text="23.09 ~ 23.11 Prediction of admission probability of 42 Seoul Programme"
            />

    </androidx.cardview.widget.CardView>



    <Button
        style="@style/go_to"
        android:id="@+id/goToLoginPageButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="GO TO HOME"
        android:background="@drawable/long_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_background"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>