<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/successful_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/sportify"
        style="@style/sportify_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/spotify_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/sportify_li"
        android:id="@+id/sportify_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Experience"
        app:layout_constraintTop_toBottomOf="@id/sportify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.7"
        app:cardBackgroundColor="#4DFFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/sportify_li"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/goToLoginPageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        >

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="10dp"
            android:text="19.08 ~ 19.12 Coala; 코딩을 알려달라 봉사 동아리 "
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:paddingLeft="10dp"
            android:text="20.04 ~ 22.01 Republic of Korea Air Force Academy"
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:paddingLeft="10dp"
            android:text="22.01 ~ 23.01 Itall Cam Study, Part time  supervisor"
            />
        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:paddingLeft="10dp"
            android:text="22.08 ~ 23.05 GDSC SeoulTech, Core member of Android"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingLeft="10dp"
            android:text="23.01 ~ 23.02 ITM short-term overseas studying, UK"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:paddingLeft="10dp"
            android:text="23.05 ~ 23.11 KT Online Night School, Mentor"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:paddingLeft="10dp"
            android:text="23.06 ~ 24.05 GDSC SeoulTech, Member of Web"
            />

        <TextView
            style="@style/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:paddingLeft="10dp"
            android:text="23.08 ~ 24.01 Samsung Dream Class, Mentor"
            />

    </androidx.cardview.widget.CardView>



    <Button
        style="@style/go_to"
        android:id="@+id/goToLoginPageButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="GO TO HOME"
        android:background="@drawable/long_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_background"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>